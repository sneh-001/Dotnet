@page
@model PercentageCalculatorApp.Pages.PercentageModel
@{
    ViewData["Title"] = "Percentage Calculator";
}

<h2>Percentage Calculator</h2>
<form method="post">
    <div>
        <label for="subject1">Subject 1 Marks:</label>
        <input type="number" name="Subject1" id="subject1" required />
    </div>
    <div>
        <label for="subject2">Subject 2 Marks:</label>
        <input type="number" name="Subject2" id="subject2" required />
    </div>
    <div>
        <label for="subject3">Subject 3 Marks:</label>
        <input type="number" name="Subject3" id="subject3" required />
    </div>
    <div>
        <label for="subject4">Subject 4 Marks:</label>
        <input type="number" name="Subject4" id="subject4" required />
    </div>
    <div>
        <label for="subject5">Subject 5 Marks:</label>
        <input type="number" name="Subject5" id="subject5" required />
    </div>
    <button type="submit">Calculate Percentage</button>
</form>

@if (Model.Percentage.HasValue)
{
    <h3>Calculated Percentage:</h3>
    <p>@Model.Percentage</p>
}