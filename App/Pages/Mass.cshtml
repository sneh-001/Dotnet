@page
@model MassModel
@{
    ViewData["Title"] = "Mass Conversion";
}
 
<h2>Mass Conversion</h2>
 
<form method="post">
    <div class="form-group">
        <label class="mt-3" for="massInKg">Mass in Kilograms:</label>
        <input type="number" step="any" class="form-control mt-3" id="massInKg" name="massInKg" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Convert</button>
</form>
 
@if (Model.MassInKg > 0)
{
    <div class="alert alert-success mt-3">
        <strong>Results:</strong>
        <ul>
            <li>@Model.MassInKg kg is @Model.MassInLbs lbs.</li>
            <li>@Model.MassInKg kg is @Model.MassInGrams grams.</li>
            <li>@Model.MassInKg kg is @Model.MassInMg mili grams.</li>
        </ul>
    </div>
}